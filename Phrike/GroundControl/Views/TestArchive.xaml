<UserControl x:Class="Phrike.GroundControl.Views.TestArchive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:Phrike.GroundControl.ViewModels"
             xmlns:views="clr-namespace:Phrike.GroundControl.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Label Content="Filter" />
            <StackPanel Orientation="Horizontal">
                <RadioButton GroupName="Filter" Content="Alle" IsChecked="{Binding Path=FilterAll, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                <RadioButton GroupName="Filter" Content="Benutzer" IsChecked="{Binding Path=FilterUser, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                <RadioButton GroupName="Filter" Content="Datum" IsChecked="{Binding Path=FilterDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
                <RadioButton GroupName="Filter" Content="Szenario" IsChecked="{Binding Path=FilterScenario  , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <!--<Label Grid.Row="1" Content="Auswahl"/>-->
        <ComboBox Grid.Row="1" ItemsSource="{Binding SubjectList}" SelectedItem="{Binding SelectedSubject}" Visibility="{Binding Path=SubjVisible}"/>
        <ComboBox Grid.Row="1" ItemsSource="{Binding Path=ScenarioList}" SelectedItem="{Binding SelectedScenario}" Visibility="{Binding Path=ScenVisible}"></ComboBox>
        <DatePicker Grid.Row="1" Text="{Binding Path=FilterDateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding Path=DateVisible}"></DatePicker>

        <ListView Grid.Row="2" ItemsSource="{Binding TestList}" DisplayMemberPath="FullTitle" x:Name="lstTest">

        </ListView>

        <Button Grid.Row="3" Content="Anzeigen"/>
