<UserControl x:Class="MinimapTest.PhrikeMinimap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinimapTest"
             mc:Ignorable="d" 
             Loaded="PhrikeMinimap_OnLoaded">
    
    <Viewbox Stretch="UniformToFill">
        <Canvas x:Name="Canvas" HorizontalAlignment="Left">
            <Canvas.Background>
                <ImageBrush x:Name="CanvasBackground" ImageSource="{Binding MinimapPath}" Stretch="None"/>
            </Canvas.Background>
        </Canvas>
    </Viewbox>
</UserControl>
