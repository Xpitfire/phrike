<Window x:Class="MinimapTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MinimapTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="MainWindow_OnLoaded">
    <StackPanel>
        <Canvas x:Name="Canvas" Width="1" Height="1" HorizontalAlignment="Left">
            <Canvas.Background>
                <ImageBrush x:Name="CanvasBackground" ImageSource="{Binding MinimapPath}" Stretch="None"/>
            </Canvas.Background>
        </Canvas>
    </StackPanel>
</Window>
